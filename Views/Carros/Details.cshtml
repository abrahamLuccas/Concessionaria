@model Concessionaria.Models.Carros
@{
    ViewData["Title"] = "Carros";
}
<h1>Detalhes dos Carros</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Modelo" class="text-danger"></label>
            <input asp-for="Modelo" class="form-control" readonly />
            <span asp-validation-for="Modelo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Marca" class="text-danger"></label>
            <input asp-for="Marca" class="form-control" readonly />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Ano" class="text-danger" ></label>
            <input asp-for="Ano" class="form-control" readonly />
            <span asp-validation-for="Ano" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Km" class="text-danger" ></label>
            <input asp-for="Km" class="form-control" readonly />
            <span asp-validation-for="Km" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Combustivel" class="text-danger" ></label>
            <input asp-for="Combustivel" class="form-control" readonly />
            <span asp-validation-for="Combustivel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Valor" class="text-danger" ></label>
            <input asp-for="Valor" class="form-control" readonly />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Ano" class="text-danger" ></label>
            <input asp-for="Ano" class="form-control" readonly />
            <span asp-validation-for="Ano" class="text-danger"></span>
        </div>
         <div class="form-group">
        @{
            try
            {
                var base64 = Convert.ToBase64String(Model.Foto);
                if(!string.IsNullOrEmpty(base64))
                {
                    var ImgSrc = String
                    .Format("data:image/png;base64, {0}", base64);
                    <img class="img-fluid" src="@ImgSrc" width="300" style="margin-top:20px" />
                }
            }
            catch
            {
                //falha na imagem
                <img class="img-fluid" src="https://st2.depositphotos.com/2668729/6825/v/450/depositphotos_68256123-stock-illustration-forbidden-signal-with-a-photo.jpg"
                width="150" />
            }
            <div class="form-group" style="margin-top:10px">
                <a class="btn btn-secondary text-white btn-sm" asp-action="Index"> Voltar</a>
            </div>
        }
    </div>
    </div>
</div>